@model List<CouponModel>

<h2 class="mb-4 text-center">Ýndirim Kuponlarý</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <input type="text" class="form-control" id="searchInput" placeholder="Kuponlarý ara..." />
    </div>
    <div class="col-md-6 text-md-right">
        <a href="@Url.Action("CreateCoupon", "coupon", new { area = "admin" })" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Yeni Kupon Ekle
        </a>
    </div>
</div>

<!-- Kuponlar Tablosu -->
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Kupon ID</th>
                <th>Kupon Kodu</th>
                <th>Ýndirim Miktarý</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        <tbody id="couponTableBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Code</td>
                    <td>@item.DiscountPercentage %</td>
                    <td>
                        <button onclick="deleteCoupon(@item.Id)" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Sil
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- CSRF Token -->
@Html.AntiForgeryToken()

<!-- JavaScript -->
<script>
    function deleteCoupon(id) {
        if (confirm("Bu kuponu silmek istediðinizden emin misiniz?")) {
            fetch(`/admin/coupon/delete/${id}`, {
                method: 'DELETE',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value // CSRF token
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload(); // Sayfayý yenile
                } else {
                    alert("Kupon silinirken bir hata oluþtu.");
                }
            })
            .catch(error => {
                console.error("Hata:", error);
                alert("Kupon silinirken bir hata oluþtu.");
            });
        }
    }

    $(document).ready(function() {
        $('#searchInput').on('input', function() {
            var searchTerm = $(this).val().toLowerCase();
            $('#couponTableBody tr').each(function() {
                var rowText = $(this).text().toLowerCase();
                $(this).toggle(rowText.indexOf(searchTerm) > -1);
            });
        });
    });
</script>

