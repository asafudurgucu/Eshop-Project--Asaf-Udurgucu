@using eshop_MVC.Models.SettingsModels
@model IEnumerable<GetSettingsModel>

@{
    ViewData["Title"] = "Ayarlar";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2 class="text-center mt-3"><i class="fas fa-cogs"></i> @ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    
}

@if (TempData["ErrorMessage"] != null)
{
    
}
<a href="@Url.Action("Update", "Settings", new { area = "Admin" })" class="btn btn-dark text-white btn-lg">
    <i class="fas fa-edit"></i> Tüm Yazıları Güncelle
</a>

@foreach (var setting in Model)
{
    <div class="card mb-4 shadow-lg">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="fas fa-home me-2"></i>
            <h3 class="mb-0">Ana Sayfa Ayarları</h3>
        </div>
        <div class="text-center mb-4">
          
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center position-relative">
                    <label><i class="fas fa-image"></i> Logo:</label>
                    <img src="http://localhost:5051/@setting.LogoPath" alt="Logo" class="img-fluid rounded shadow mb-2" style="max-width: 80%;" />
                    <form asp-action="UpdateLogo" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                        <input type="file" name="logoPath" class="d-none file-upload" onchange="this.form.submit()" />
                        <i class="fas fa-camera" style="cursor: pointer;" title="Logo Güncelle" onclick="this.previousElementSibling.click()"></i>
                    </form>
                </div>
                <div class="col-md-4 text-center position-relative">
                    <label><i class="fas fa-image"></i> Footer Logo:</label>
                    <img src="http://localhost:5051/@setting.FooterLogoPath" alt="Footer Logo" class="img-fluid rounded shadow mb-2" style="max-width: 80%;" />
                    <form asp-action="UpdateFooterLogo" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                        <input type="file" name="footerLogoPath" class="d-none file-upload" onchange="this.form.submit()" />
                        <i class="fas fa-camera" style="cursor: pointer;" title="Footer Logo Güncelle" onclick="this.previousElementSibling.click()"></i>
                    </form>
                </div>
            </div>
            <div class="row mt-4">
                <!-- Banner 1 -->
                <div class="col-md-4 text-center position-relative">
                    <label><i class="fas fa-image"></i> Banner 1:</label>
                    <img src="http://localhost:5051/@setting.Banner1Path" alt="Banner 1" class="img-fluid rounded shadow mb-2" style="max-width: 100%;" />
                    <form asp-action="UpdateBanner1" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                        <input type="file" name="banner1Path" class="d-none file-upload" onchange="this.form.submit()" />
                        <i class="fas fa-camera" style="cursor: pointer;" title="Banner 1 Güncelle" onclick="this.previousElementSibling.click()"></i>
                    </form>
                </div>
                <!-- Banner 2 -->
                <div class="col-md-4 text-center position-relative">
                    <label><i class="fas fa-image"></i> Banner 2:</label>
                    <img src="http://localhost:5051/@setting.Banner2Path" alt="Banner 2" class="img-fluid rounded shadow mb-2" style="max-width: 100%;" />
                    <form asp-action="UpdateBanner2" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                        <input type="file" name="banner2Path" class="d-none file-upload" onchange="this.form.submit()" />
                        <i class="fas fa-camera" style="cursor: pointer;" title="Banner 2 Güncelle" onclick="this.previousElementSibling.click()"></i>
                    </form>
                </div>
                <!-- Banner 3 -->
                <div class="col-md-4 text-center position-relative">
                    <label><i class="fas fa-image"></i> Banner 3:</label>
                    <img src="http://localhost:5051/@setting.Banner3Path" alt="Banner 3" class="img-fluid rounded shadow mb-2" style="max-width: 100%;" />
                    <form asp-action="UpdateBanner3" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                        <input type="file" name="banner3Path" class="d-none file-upload" onchange="this.form.submit()" />
                        <i class="fas fa-camera" style="cursor: pointer;" title="Banner 3 Güncelle" onclick="this.previousElementSibling.click()"></i>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-lg">
        <div class="card-header bg-success text-white d-flex align-items-center">
            <i class="fas fa-info-circle me-2"></i>
            <h3 class="mb-0">Hakkımızda Sayfası</h3>
        </div>
        <div class="card-body">
            <label><i class="fas fa-heading"></i> About Text Title:</label>
            <p>@setting.AboutTextTitle</p>
            <label><i class="fas fa-align-left"></i> About Text:</label>
            <p>@setting.AboutText</p>
            <label><i class="fas fa-image"></i> About Banner:</label>
            <div class="position-relative">
                <img src="http://localhost:5051/@setting.AboutBannerPath" alt="About Banner" class="img-fluid rounded shadow mb-2" />
                <form asp-action="UpdateAboutBanner" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                    <input type="file" name="aboutBannerPath" class="d-none file-upload" onchange="this.form.submit()" />
                    <i class="fas fa-camera" style="cursor: pointer;" title="About Banner Güncelle" onclick="this.previousElementSibling.click()"></i>
                </form>
            </div>
            <label><i class="fas fa-camera"></i> About Photo:</label>
            <div class="position-relative">
                <img src="http://localhost:5051/@setting.AboutPhotoPath" alt="About Photo" class="img-fluid rounded shadow mb-2" />
                <form asp-action="UpdateAboutPhoto" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                    <input type="file" name="aboutPhotoPath" class="d-none file-upload" onchange="this.form.submit()" />
                    <i class="fas fa-camera" style="cursor: pointer;" title="About Photo Güncelle" onclick="this.previousElementSibling.click()"></i>
                </form>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-lg">
        <div class="card-header bg-warning text-dark d-flex align-items-center">
            <i class="fas fa-phone me-2"></i>
            <h3 class="mb-0">İletişim Sayfası</h3>
        </div>
        <div class="card-body">
            <label><i class="fas fa-link"></i> Social Media URL 1:</label>
            <p>@setting.SocialMediaUrl</p>
            <label><i class="fas fa-link"></i> Social Media URL 2:</label>
            <p>@setting.SocialMediaUrl2</p>
            <label><i class="fas fa-link"></i> Social Media URL 3:</label>
            <p>@setting.SocialMediaUrl3</p>
            <label><i class="fas fa-map-marker-alt"></i> Map Location:</label>
            <iframe src="@setting.MapLocation" width="100%" height="400px" frameborder="0" style="border:0" allowfullscreen></iframe>
            <label><i class="fas fa-image"></i> Contact Banner:</label>
            <div class="position-relative">
                <img src="http://localhost:5051/@setting.ContactBannerPath" alt="Contact Banner" class="img-fluid rounded shadow mb-2" />
                <form asp-action="UpdateContactBanner" asp-controller="Settings" method="post" enctype="multipart/form-data" class="position-absolute top-0 end-0 p-2">
                    <input type="file" name="contactBannerPath" class="d-none file-upload" onchange="this.form.submit()" />
                    <i class="fas fa-camera" style="cursor: pointer;" title="Contact Banner Güncelle" onclick="this.previousElementSibling.click()"></i>
                </form>
            </div>
        </div>
    </div>

   
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
