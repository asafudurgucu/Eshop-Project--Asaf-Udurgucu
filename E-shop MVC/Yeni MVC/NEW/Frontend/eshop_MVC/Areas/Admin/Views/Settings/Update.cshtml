@model SettingsModel
@{
    ViewData["Title"] = "Ayarlar";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="Update" asp-controller="Settings" method="post" >
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FooterText">Footer Metni</label>
        <input type="text" class="form-control" id="FooterText" name="FooterText" value="@ViewBag.FooterText" />
    </div>

    <div class="form-group">
        <label for="SliderText">Slider Metni</label>
        <input type="text" class="form-control" id="SliderText" name="SliderText" value="@ViewBag.SliderText" />
    </div>

    <div class="form-group">
        <label for="AboutTextTitle">Hakkında Başlık</label>
        <input type="text" class="form-control" id="AboutTextTitle" name="AboutTextTitle" value="@ViewBag.AboutTextTitle" />
    </div>

    <div class="form-group">
        <label for="AboutTextTitle">Hakkında Başlık</label>
        <input type="text" class="form-control" id="AboutText" name="AboutText" value="@ViewBag.AboutTextTitle" />
    </div>

    <div class="form-group">
        <label for="SocialMediaUrl">Sosyal Medya URL 1</label>
        <input type="text" class="form-control" id="SocialMediaUrl" name="SocialMediaUrl" value="@ViewBag.SocialMediaUrl" />
    </div>

    <div class="form-group">
        <label for="SocialMediaUrl2">Sosyal Medya URL 2</label>
        <input type="text" class="form-control" id="SocialMediaUrl2" name="SocialMediaUrl2" value="@ViewBag.SocialMediaUrl2" />
    </div>

    <div class="form-group">
        <label for="SocialMediaUrl3">Sosyal Medya URL 3</label>
        <input type="text" class="form-control" id="SocialMediaUrl3" name="SocialMediaUrl3" value="@ViewBag.SocialMediaUrl3" />
    </div>

    <div class="form-group">
        <label for="MapLocation">Harita Konumu</label>
        <input type="text" class="form-control" id="MapLocation" name="MapLocation" value="@ViewBag.MapLocation" />
    </div>

    

    <button type="submit" class="btn btn-primary">Ayarları Güncelle</button>
</form>
