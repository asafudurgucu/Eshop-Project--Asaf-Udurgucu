@model eshop_MVC.Models.OrderModel
@{
    ViewData["Title"] = "Siparişi Sil";
}
<h1 class="my-4 text-danger">Siparişi Sil</h1>

<div class="alert alert-danger">
    Bu siparişi silmek istediğinize emin misiniz?
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        Sipariş ID: @Model.Id
    </div>
    <div class="card-body">
        <p><strong>Durum:</strong> @Model.OrderStatus</p>
        <p><strong>Sipariş Tarihi:</strong> @Model.CreatedDate.ToShortDateString()</p>
        <p><strong>Toplam Tutar:</strong> @Model.TotalAmount.ToString("C")</p>
    </div>
</div>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" class="mt-3">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Sil
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> İptal
    </a>
</form>
