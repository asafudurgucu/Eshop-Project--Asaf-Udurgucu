@model IEnumerable<OrderModel>
<h1>Durumu: @ViewData["Status"] olan Siparişler</h1>
<table>
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Toplam Fiyat</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TotalAmount</td>
                <td>@order.CreatedDate</td>
                <td>@order.OrderStatus</td>
                <td><a href="/Order/Details/@order.Id">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>