@model IEnumerable<OrderModel>

<h1>@ViewData["StartDate"] ile @ViewData["EndDate"] arasındaki Siparişler</h1>

@if (!Model.Any())  
{
    <div class="alert alert-info text-center">
        <strong>Belirtilen tarihler arasında teslim edilen sipariş bulunmamaktadır.</strong>
    </div>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Sipariş ID</th>
                <th>Toplam Fiyat</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.CreatedDate</td>
                    <td>@order.OrderStatus</td>
                    <td><a href="/Order/Details/@order.Id">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
}
