@model HomeProductModel

<!-- ***** Main Banner Area Start ***** -->
<div id="top" class="text-center">
    <br /><br /><br /><br /><br />
    <!-- Kayan Metin -->
    <marquee behavior="scroll" direction="left" scrollamount="8" style="background-color: #000000; color: #ffffff; font-size: 18px; font-weight: bold; padding: 10px;">
        @Model.Settings.FirstOrDefault().SliderText 
     
       
    </marquee>
    <br /><br />
    <div class="container-fluid" style="padding: 0; margin: 0;">
        <div class="row justify-content-center">
            <!-- Banner -->
            @foreach (var setting in Model.Settings)
            {
                <div class="col-12">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="http://localhost:5051/@setting.Banner1Path" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://localhost:5051/@setting.Banner2Path" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://localhost:5051/@setting.Banner3Path" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Products Area Start ***** -->
<section class="section mt-4" id="products">
    <div class="container">
        <h2 class="p-2 text-center text-dark">Popüler Bazı Ürünlerimiz</h2>
        <div class="row">
            <!-- Kategoriler -->
            <div class="col-lg-3 pr-3">
                <ul class="category-list">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="category-item">
                            <a href="@Url.Action("GetAllByCategory", "Category", new { id = category.Id, category = category.Name })">
                                @category.Name
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Ürünler -->
            <div class="col-lg-9 pl-3">
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                            <div class="item shadow-sm p-3 mb-5 bg-white rounded" style="transition: box-shadow 0.3s ease;">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li>
                                                <a onclick="window.location.href='@Url.Action("Details", "Product", new { id = product.Id })'">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </li>

                                            <li>
                                                <a asp-area="" asp-controller="Basket" asp-action="AddToBasket" asp-route-productId="@product.Id" asp-route-quantity="1">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <img src="http://localhost:5051/@product.ImageUrl" alt="@product.Name">
                                </div>
                                <div class="down-content">
                                    <h4>@product.Name</h4>
                                    <span>@product.Price.ToString("C")</span>
                                    <a asp-area="" asp-controller="Basket" asp-action="AddToBasket" asp-route-productId="@product.Id" asp-route-quantity="1" class="btn btn-dark ">Sepete Ekle</a>
                                </div>
                                <div class="star-top-right">
                                    <i class="fa fa-star"></i>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Daha Fazla Ürün Göster -->
        <div class="text-center">
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Daha Fazla Ürün Göster</a>
        </div>
    </div>
</section>
<!-- ***** Products Area End ***** -->

<!-- Style for responsiveness -->
<style>
    /* Banner Style */
    #carouselExampleIndicators {
        max-width: 1280px;
        height: 500px;
        margin: 0 auto; /* Ortada konumlandır */
    }

    #carouselExampleIndicators img {
        width: 100%; /* Resmin tam genişliğe yayılmasını sağlar */
        height: 500px;
        object-fit: cover; /* Resmin boyutlarıyla uyumlu olmasını sağlar */
    }

    /* Category List */
    .category-list {
        list-style: none;
        padding: 10px;
        margin: 20px 10px 20px 0;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .category-item {
        padding: 15px 20px;
        border-bottom: 1px solid #ddd;
        font-size: 16px;
        font-weight: 500;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .category-item:last-child {
        border-bottom: none;
    }

    .category-item a {
        text-decoration: none;
        color: #343a40;
        display: block;
        width: 100%;
        transition: color 0.3s ease;
    }

    /* Hover ve Aktif Etki */
    .category-item:hover {
        background-color: #1D1616;
        color: #fff;
    }

    .category-item:hover a {
        color: #fff;
    }

    /* Scrollbar Stili */
    .category-list::-webkit-scrollbar {
        width: 8px;
    }

    .category-list::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 4px;
    }

    .category-list::-webkit-scrollbar-thumb:hover {
        background-color: #aaa;
    }

    /* Ürün Listesi */
    .item {
        border: 1px solid #ddd;
        transition: box-shadow 0.3s ease;
        position: relative; /* Star için gerekli */
    }

    .item:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .thumb img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .hover-content {
        display: none;
    }

    .item:hover .hover-content {
        display: block;
    }

    .down-content {
        text-align: center;
    }

    .down-content h4 {
        font-size: 18px;
        margin: 10px 0;
    }

    .down-content span {
        font-size: 16px;
        color: #555;
    }

    .stars {
        display: none; /* Bu kısmı ekledim */
    }

    .star-top-right {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        color: #ffc107;
    }

    /* Media Queries for Mobile and Smaller Screens */
    media (max-width: 767px) {
        #carouselExampleIndicators

    {
        display: none; /* Banner'ı mobilde gizle */
    }

    /* Diğer mobil stil ayarlarını da buraya ekleyebilirsiniz */
    .category-list {
        margin-bottom: 20px;
    }

    .category-item {
        font-size: 14px;
        padding: 10px 15px;
    }

    .item {
        margin-bottom: 15px; /* Ürünler arasındaki boşluğu artırdık */
    }

        .item .thumb img {
            height: 150px; /* Ürün resimlerinin boyutunu mobilde küçülttük */
            object-fit: contain;
        }

        .item .down-content h4 {
            font-size: 16px;
        }

    .down-content span {
        font-size: 14px;
    }

    .text-center .btn {
        padding: 8px 12px;
    }

    }
</style>
