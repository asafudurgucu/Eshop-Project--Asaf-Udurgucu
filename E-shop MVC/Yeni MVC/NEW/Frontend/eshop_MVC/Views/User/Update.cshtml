@model ApplicationUserUpdateModel

@{
    ViewData["Title"] = "Kullanıcı Bilgilerini Güncelle";
}
 <br />
      <br />
    <br />
    <br />
<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
   


    <form asp-action="UpdateUser" asp-controller="User" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FirstName">Ad</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Soyad</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber">Telefon Numarası</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Adres</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">Şehir</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <br />
        <br />
        <br />

        <button type="submit" class="btn btn-primary mt-3 d-block mx-auto">Güncelle</button>
    </form>
</div>
