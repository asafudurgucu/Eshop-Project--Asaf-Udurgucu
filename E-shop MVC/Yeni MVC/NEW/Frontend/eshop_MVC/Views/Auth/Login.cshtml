 @model LoginModel

    
    <br />
    <br />
    <br />
    <br />
    <br />
   
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Giriş Yap</h3>
                    </div>

                    <div class="card-body">
                        <form asp-action="Login" method="post"> 
                            <div asp-validation-summary="All" >  </div>
                            <div class="form-group">
                            <label for="email" asp-for="Email">E-posta</label>
                            <input type="email" class="form-control" id="email" placeholder="E-postanızı girin" asp-for="Email">
                            </div>
                            <div class="form-group">
                               <label for="password" asp-for="Password" >Şifre</label>
                            <input class="form-control" placeholder="Şifrenizi girin" asp-for=Password type="password" />
                             </div>
                            <button type="submit" class="btn btn-dark btn-block">Giriş Yap</button>

                            <br />

                            <a href="/register" class="btn btn-dark btn-block">Üye Ol</a>
                        
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

